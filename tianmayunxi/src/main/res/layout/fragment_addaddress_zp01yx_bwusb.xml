<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.system.uilibrary.views.titlebar.TitleBarView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="?attr/primary"
        app:title_actionTextColor="@color/white"
        app:title_dividerColor="?attr/primary"
        app:title_leftTextColor="@color/white"
        app:title_rightTextColor="@color/white"
        app:title_titleMainTextColor="@color/white"
        app:title_titleSubTextColor="@color/white" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/material_10">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="@dimen/material_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textcolor06"
            android:text="姓名"/>
        <EditText
            android:id="@+id/ed_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv1"
            android:layout_marginLeft="@dimen/material_10"
            android:background="@color/white"
            android:textSize="@dimen/material_font_12"
            android:hint="请输入姓名"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/material_20"
        android:layout_marginRight="@dimen/material_20"
        android:layout_height="@dimen/material_1"
        android:background="@color/line01"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/material_10">
        <TextView
            android:id="@+id/tv2"
            android:layout_width="@dimen/material_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textcolor06"
            android:text="手机号码"/>
        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv2"
            android:layout_marginLeft="@dimen/material_10"
            android:background="@color/white"
            android:textSize="@dimen/material_font_12"
            android:hint="请输入手机号"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/material_20"
        android:layout_marginRight="@dimen/material_20"
        android:layout_height="@dimen/material_1"
        android:background="@color/line01"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/material_10">
        <TextView
            android:id="@+id/tv3"
            android:layout_width="@dimen/material_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textcolor06"
            android:text="地区"/>
        <EditText
            android:id="@+id/ed_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv3"
            android:layout_marginLeft="@dimen/material_10"
            android:background="@color/white"
            android:textSize="@dimen/material_font_12"
            android:hint="请输入地区"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/material_20"
        android:layout_marginRight="@dimen/material_20"
        android:layout_height="@dimen/material_1"
        android:background="@color/line01"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/material_10">
        <TextView
            android:id="@+id/tv4"
            android:layout_width="@dimen/material_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textcolor06"
            android:text="详细地址"/>
        <EditText
            android:id="@+id/ed_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv4"
            android:layout_marginLeft="@dimen/material_10"
            android:background="@color/white"
            android:textSize="@dimen/material_font_12"
            android:hint="请输入详细地址"
            />
    </RelativeLayout>
</LinearLayout>