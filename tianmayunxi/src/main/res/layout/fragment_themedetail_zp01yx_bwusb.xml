<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:background="#801F2E6E"

        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_20"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/material_10"
            android:paddingBottom="@dimen/material_10"
            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/material_5"
                android:paddingRight="@dimen/material_15"
                android:paddingLeft="@dimen/material_10"
                android:paddingBottom="@dimen/material_5"
                android:src="@mipmap/icon_nav_back"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/head"
                android:layout_width="@dimen/material_25"
                android:layout_height="@dimen/material_25"
                android:layout_toLeftOf="@+id/tv_title"
                android:layout_marginRight="@dimen/material_5"
                fresco:roundAsCircle="true"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxWidth="@dimen/material_200"
                android:lines="1"
                android:textSize="@dimen/material_font_16"
                android:text="主题信息"
                android:ellipsize="end"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_dy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订阅"
                android:drawablePadding="@dimen/material_5"
                android:drawableLeft="@mipmap/icon_dy"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_more"
                android:layout_marginRight="@dimen/material_5"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:textColor="@color/textcolor09"
                android:textSize="@dimen/material_font_13"
                />
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="@dimen/material_25"
                android:layout_height="@dimen/material_25"
                android:scaleType="centerInside"
                android:visibility="gone"
                android:src="@mipmap/icon_nav_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/material_10">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv"
            android:layout_width="@dimen/material_110"
            android:layout_height="@dimen/material_100"
            fresco:roundedCornerRadius="@dimen/material_3"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#主题名称#"
            android:layout_marginTop="@dimen/material_5"
            android:layout_toRightOf="@+id/iv"
            android:textSize="@dimen/material_font_13"
            android:textColor="@color/blue_primary"
            android:layout_marginLeft="@dimen/material_5"
            />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/material_5"
            android:layout_marginTop="@dimen/material_5"
            android:textSize="@dimen/material_font_13"
            />
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mlist"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/material_5"
        android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>