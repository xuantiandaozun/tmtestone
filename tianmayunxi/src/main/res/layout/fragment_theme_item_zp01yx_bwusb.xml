<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_10"
    android:elevation="@dimen/material_5"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        fresco:roundAsCircle="true"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/material_font_13"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textcolor02"
        android:layout_marginTop="@dimen/material_5"
     />
    <com.aries.ui.view.radius.RadiusRelativeLayout
        android:id="@+id/tv_statue"
        android:layout_width="@dimen/material_70"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_2"
        android:textSize="@dimen/material_font_12"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        rv:rv_radiusHalfHeightEnable="true"

        rv:rv_backgroundColor="@color/blue_primary"
        rv:rv_textColor="@color/white"
        rv:rv_strokeColor="@color/blue_primary"
        rv:rv_strokeWidth="@dimen/material_1"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_dy1"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/tv_dy"
                android:layout_marginRight="@dimen/material_2"
                />
            <TextView
                android:id="@+id/tv_dy"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/material_font_12"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </com.aries.ui.view.radius.RadiusRelativeLayout></LinearLayout>