<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_20"
           />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/material_10"
            android:paddingBottom="@dimen/material_10"
           >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/material_5"
                android:paddingRight="@dimen/material_15"
                android:paddingLeft="@dimen/material_10"
                android:paddingBottom="@dimen/material_5"
                android:src="@mipmap/icon_nav_back"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/head"
                android:layout_width="@dimen/material_25"
                android:layout_height="@dimen/material_25"
                android:layout_toLeftOf="@+id/tv_centertitle"
                android:layout_marginRight="@dimen/material_5"
                fresco:roundAsCircle="true"
                />
            <TextView
                android:id="@+id/tv_centertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxWidth="@dimen/material_200"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_dy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订阅"
                android:drawablePadding="@dimen/material_5"
                android:drawableLeft="@mipmap/icon_dy"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/iv_more"
                android:layout_marginRight="@dimen/material_5"
                android:textColor="@color/textcolor09"
                android:textSize="@dimen/material_font_13"
                />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar"
        android:layout_above="@+id/re_bottom"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_artictitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/material_10"
                    android:textColor="@color/blue_primary"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_head"
                        android:layout_width="@dimen/material_50"
                        android:layout_height="@dimen/material_50"
                        fresco:roundAsCircle="true"
                        />
                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_head"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/material_font_13"
                        android:layout_toLeftOf="@+id/tv_time"
                        android:layout_marginRight="@dimen/material_10"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/textcolor02"
                        />
                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_time"
                        android:layout_marginRight="@dimen/material_10"
                        android:layout_below="@+id/tv_nickname"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/material_5"
                        android:layout_toRightOf="@+id/iv_head"
                        android:textColor="@color/textcolor03"
                        android:textSize="@dimen/material_font_13"
                        />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/material_font_12"
                        android:layout_width="wrap_content"
                        android:textColor="@color/textcolor01"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="@dimen/dp_10">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/user_head"
                        android:layout_width="@dimen/material_25"
                        android:layout_height="@dimen/material_25"
                        fresco:roundAsCircle="true"
                        />
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_toRightOf="@+id/user_head"
                        android:textColor="@color/textcolor02"
                        android:textSize="@dimen/material_font_13"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_1"
                    android:background="@color/line01"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">
                    <TextView
                        android:id="@+id/tv_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/material_5"
                        android:drawableLeft="@mipmap/icon_good"
                        android:textSize="@dimen/material_font_13"
                        android:textColor="@color/textcolor01"
                        />
                    <TextView
                        android:id="@+id/tv_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/material_5"
                        android:drawableLeft="@mipmap/icon_pl"
                        android:textSize="@dimen/material_font_13"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textcolor01"
                        />

                    <TextView
                        android:id="@+id/iv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@mipmap/icon_share"
                        android:drawablePadding="@dimen/material_5"
                        android:textColor="@color/textcolor01"
                        android:textSize="@dimen/material_font_13" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="@dimen/material_10"
                android:padding="@dimen/material_10">
                <View
                    android:layout_width="@dimen/material_2"
                    android:layout_height="@dimen/material_15"
                    android:layout_gravity="center_vertical"
                    android:background="@color/blue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textcolor02"
                    android:layout_marginLeft="@dimen/material_10"
                    android:text="全部评论"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/material_1"
                android:background="@color/line01"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/pl_mlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <TextView
        android:id="@+id/iv_jf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_tip_jf"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:paddingTop="@dimen/dp_10"
        android:layout_above="@+id/re_bottom"
        android:layout_marginBottom="@dimen/material_130"
        android:textSize="@dimen/material_font_13"
        android:paddingLeft="@dimen/material_30"
        android:text="领取积分"
        />

    <LinearLayout
        android:id="@+id/re_bottom"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/background09"
        android:padding="@dimen/material_5"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/ret_circle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="写评论~"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textColorHint="@color/textcolor08"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            rv:rv_textColor="@color/white"
            rv:rv_backgroundColor="@color/background010"
            rv:rv_radius="10dp"
            rv:rv_radiusHalfHeightEnable="true"
          />
        <ImageView
            android:id="@+id/iv_pl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/material_10"
            android:layout_marginRight="@dimen/material_10"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_footer_pl"
            />
        <ImageView
            android:id="@+id/tv_addstar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/material_10"
            android:layout_marginRight="@dimen/material_10"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_footer_sc"
            />
        <ImageView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/material_10"
            android:layout_marginRight="@dimen/material_10"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_footer_share"
            />
    </LinearLayout>

</RelativeLayout>