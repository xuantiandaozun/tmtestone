<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.system.uilibrary.views.titlebar.TitleBarView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="?attr/primary"
        app:title_actionTextColor="@color/white"
        app:title_dividerColor="?attr/primary"
        app:title_leftTextColor="@color/white"
        app:title_rightTextColor="@color/white"
        app:title_titleMainTextColor="@color/white"
        app:title_titleSubTextColor="@color/white" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/material_10">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="@dimen/material_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textcolor06"
            android:text="我的头像"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head"
            android:layout_width="@dimen/material_25"
            android:layout_toRightOf="@+id/tv1"
            app:roundAsCircle="true"
            android:layout_marginLeft="@dimen/material_10"
            android:layout_height="@dimen/material_25" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv1"
            android:text="+10"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/material_10"
            android:textColor="@color/blue_primary"
            />
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_mygetmore"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/material_10"
        android:padding="@dimen/material_10">
        <TextView
            android:id="@+id/tv2"
            android:layout_width="@dimen/material_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textcolor06"
            android:text="登录账号"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv2"
            android:textSize="@dimen/material_font_13"
            android:layout_marginLeft="@dimen/material_10"
            android:text="正使用微信登录(登录的微信昵称)"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv2"
            android:text="+10"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/material_10"
            android:textColor="@color/blue_primary"
            />
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_mygetmore"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/material_20"
        android:layout_marginRight="@dimen/material_20"
        android:layout_height="@dimen/material_1"
        android:background="@color/line01"/>
    <RelativeLayout
        android:id="@+id/re_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/material_10">
        <TextView
            android:id="@+id/tv3"
            android:layout_width="@dimen/material_70"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor06"
            android:layout_centerVertical="true"
            android:text="昵称"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv3"
            android:layout_marginLeft="@dimen/material_10"
            android:text="微信用户111"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv3"
            android:text="+10"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/material_10"
            android:textColor="@color/blue_primary"
            />
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:background="@mipmap/icon_mygetmore"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/material_20"
        android:layout_marginRight="@dimen/material_20"
        android:layout_height="@dimen/material_1"
        android:background="@color/line01"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/material_10">
        <TextView
            android:id="@+id/tv4"
            android:layout_width="@dimen/material_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textcolor06"
            android:text="性别"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv4"
            android:layout_marginLeft="@dimen/material_10"
            android:text="女"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv4"
            android:text="+10"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/material_10"
            android:textColor="@color/blue_primary"
            />
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_mygetmore"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/material_10"
        android:padding="@dimen/material_10">
        <TextView
            android:id="@+id/tv5"
            android:layout_width="@dimen/material_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textcolor06"
            android:text="简介"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv5"
            android:layout_marginLeft="@dimen/material_10"
            android:text="未添加简介"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv5"
            android:text="+10"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/material_10"
            android:textColor="@color/blue_primary"
            />
        <ImageView
            android:id="@+id/iv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_mygetmore"
            />
    </RelativeLayout>
</LinearLayout>