<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/re_main"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.aries.ui.view.radius.RadiusLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/material_10"
        android:paddingBottom="@dimen/material_10"
        android:paddingLeft="@dimen/material_80"
        rv:rv_radius="5dp"
        android:paddingRight="@dimen/material_80"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/blue_primary"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_notice"
            android:drawablePadding="@dimen/material_5"
            android:layout_gravity="center_horizontal"
            android:text="领取成功"
            />
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_10"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/material_font_19"
            />
        <TextView
            android:id="@+id/tv_days"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/material_10"
            android:textSize="@dimen/material_font_12"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor01"
            android:text="已连续签到1天"
            />
    </com.aries.ui.view.radius.RadiusLinearLayout>
</RelativeLayout>