<?xml version="1.0" encoding="utf-8"?>
<com.system.uilibrary.views.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="@dimen/material_70"
        android:layout_height="@dimen/material_70"
        android:background="@color/background013"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/material_20"
            android:layout_height="@dimen/material_20"
            android:background="@mipmap/iv_add"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:minHeight="@dimen/material_72"
            android:minWidth="@dimen/material_72"
            android:scaleType="fitXY"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/re"
        android:text="0/10"
        android:layout_marginLeft="@dimen/material_5"
        android:textColor="@color/blue_primary"
        android:layout_alignBottom="@+id/re"
        />

</com.system.uilibrary.views.SquareLayout>