<?xml version="1.0" encoding="utf-8"?>
<com.system.uilibrary.views.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/material_20"
            android:layout_height="@dimen/material_20"
            android:background="@mipmap/iv_add"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:minHeight="@dimen/material_72"
            android:minWidth="@dimen/material_72"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加图片"
            android:layout_below="@+id/iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/material_10"
            />
    </RelativeLayout>

</com.system.uilibrary.views.SquareLayout>