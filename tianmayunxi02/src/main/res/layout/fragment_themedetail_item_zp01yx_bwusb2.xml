<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/material_50"
            android:layout_height="@dimen/material_50"
            fresco:roundAsCircle="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/material_font_13"
            android:layout_toLeftOf="@+id/tv_time"
            android:layout_marginRight="@dimen/material_10"
            android:lines="1"
            android:visibility="gone"
            android:textColor="@color/blue_primary"
            android:text="#主题名称#"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_theme"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/material_5"
            android:layout_toLeftOf="@+id/tv_time"
            android:layout_marginRight="@dimen/material_10"
            android:lines="1"
            android:layout_toRightOf="@+id/iv_head"
            android:textColor="@color/textcolor02"
            android:text="标题..."
            />
        <TextView
            android:id="@+id/tv_time"
            android:text="4小时"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/material_font_12"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:textColor="@color/textcolor01"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/textcolor03"
        android:text="内容, 内容, 内容, 内容, 内容..."
        android:textSize="@dimen/material_font_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_head"
            android:layout_width="@dimen/material_25"
            android:layout_height="@dimen/material_25"
            fresco:roundAsCircle="true"
            />
        <TextView
            android:id="@+id/tv_username"
            android:text="用户呢称"
            android:layout_toRightOf="@+id/user_head"
            android:textColor="@color/textcolor02"
            android:textSize="@dimen/material_font_13"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_1"
        android:background="@color/line01"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/material_5"
            android:paddingTop="@dimen/material_10"
            android:paddingBottom="@dimen/material_10"
            android:drawableLeft="@mipmap/icon_good"
            android:textSize="@dimen/material_font_13"
            android:paddingLeft="@dimen/material_10"
            android:paddingRight="@dimen/material_30"
            android:textColor="@color/textcolor01"
            android:text="(0)"
            />
        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/material_5"
            android:paddingTop="@dimen/material_10"
            android:paddingBottom="@dimen/material_10"
            android:drawableLeft="@mipmap/icon_pl"
            android:textSize="@dimen/material_font_13"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textcolor01"
            android:text="(0)"
            />
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/material_5"
            android:paddingTop="@dimen/material_10"
            android:paddingBottom="@dimen/material_10"
            android:paddingRight="@dimen/material_10"
            android:drawableLeft="@mipmap/icon_share"
            android:textSize="@dimen/material_font_13"
            android:textColor="@color/textcolor01"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>