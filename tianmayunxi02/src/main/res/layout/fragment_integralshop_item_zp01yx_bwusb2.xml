<?xml version="1.0" encoding="utf-8"?>
<com.aries.ui.view.radius.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    rv:rv_radius="5dp"
    rv:rv_backgroundColor="@color/background06"
    android:background="@color/background06"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv"
        android:layout_width="@dimen/material_170"
        android:layout_height="@dimen/material_180"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/material_font_13"
        android:textColor="@color/textcolor02"
        android:layout_marginTop="@dimen/material_5"
        android:layout_marginLeft="@dimen/material_5"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/material_5"
        android:layout_marginBottom="@dimen/material_5"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor07"
            android:textSize="@dimen/material_font_12"
            android:layout_centerVertical="true"
            />
        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/btn_yuehuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="立即兑换"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/material_font_12"
            rv:rv_backgroundColor="@android:color/white"
            rv:rv_radiusHalfHeightEnable="true"
            rv:rv_rippleEnable="true"
            rv:rv_strokeColor="@color/blue_primary"
            rv:rv_strokeWidth="0.5dp"
            rv:rv_textColor="@color/blue_primary"
          />
    </RelativeLayout>
</com.aries.ui.view.radius.RadiusLinearLayout>