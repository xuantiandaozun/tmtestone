<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/re_main"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.aries.ui.view.radius.RadiusLinearLayout
        android:layout_width="272dp"
        android:layout_height="153dp"
        android:background="@color/white"
        android:orientation="vertical"
        rv:rv_radius="5dp"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/blue_primary"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_notice"
            android:drawablePadding="@dimen/material_5"
            android:layout_marginTop="@dimen/material_20"
            android:layout_gravity="center_horizontal"
            android:text="编辑昵称"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/material_font_12"
            android:background="@color/white"
            android:gravity="center"
            android:layout_marginTop="@dimen/material_20"
            android:hint="请输入昵称"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_1"
            android:layout_marginTop="@dimen/material_5"
            android:layout_marginLeft="@dimen/material_50"
            android:layout_marginRight="@dimen/material_50"
            android:background="@color/line01"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_1"
            android:layout_marginTop="@dimen/material_25"
            android:background="@color/line01"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:layout_height="match_parent" />
            <View
                android:layout_width="@dimen/material_1"
                android:layout_height="match_parent"
                android:background="@color/line01"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="确认"
                android:textColor="@color/blue_primary"
                android:gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>
    </com.aries.ui.view.radius.RadiusLinearLayout>
</RelativeLayout>