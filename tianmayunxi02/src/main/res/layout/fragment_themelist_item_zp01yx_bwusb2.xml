<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <com.aries.ui.view.radius.RadiusTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/material_15"
        android:paddingLeft="@dimen/material_10"
        android:paddingRight="@dimen/material_10"
        android:paddingTop="@dimen/material_5"
        android:paddingBottom="@dimen/material_5"
        rv:rv_backgroundColor="@android:color/white"
        rv:rv_backgroundSelectedColor="@android:color/holo_purple"
        rv:rv_radiusHalfHeightEnable="true"
        rv:rv_rippleEnable="true"
        rv:rv_strokeColor="@color/line02"
        rv:rv_strokeSelectedColor="@android:color/holo_red_dark"
        rv:rv_strokeWidth="0.5dp"
        rv:rv_textColor="@color/textcolor01"
        rv:rv_textSelectedColor="@android:color/white"/>
</LinearLayout>