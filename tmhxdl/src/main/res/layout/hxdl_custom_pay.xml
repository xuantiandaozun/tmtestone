<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/re_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginBottom="@dimen/material_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/icon_closed"
            />
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_10">
                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="@dimen/hxdl_material_90"
                    android:layout_height="@dimen/material_120"
                    />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/zp01hxdl_vjflt_textcolor01"
                    android:layout_marginLeft="@dimen/material_10"
                    android:layout_toRightOf="@+id/iv"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv"
                    android:layout_toRightOf="@+id/iv"
                    android:textColor="@color/hxdl_background01"
                    android:layout_marginLeft="@dimen/material_10"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/material_10"
                android:paddingRight="@dimen/material_10"
                android:paddingTop="@dimen/material_5"
                android:paddingBottom="@dimen/material_5"
                android:background="@color/hxdl_background03"
                android:text="请选择支付方式"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_wx"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@mipmap/icon_pay_wx"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    />
                <TextView
                    android:id="@+id/tv_zfb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@mipmap/icon_pay_zfb"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>