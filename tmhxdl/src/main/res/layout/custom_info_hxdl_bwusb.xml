<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/re_main"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.aries.ui.view.radius.RadiusRelativeLayout
        android:layout_width="272dp"
        android:layout_height="123dp"
        android:background="@color/white"
        android:orientation="vertical"
        rv:rv_radius="5dp"
        android:layout_centerInParent="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/material_font_12"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:text="需要登录后才可购买，是否登录？"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_1"
            android:layout_above="@+id/ll_bottom"
            android:background="@color/line01"/>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/material_50">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                android:layout_height="match_parent" />
            <View
                android:layout_width="@dimen/material_1"
                android:layout_height="match_parent"
                android:background="@color/line01"/>
            <TextView
                android:id="@+id/tv_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="确认"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>
    </com.aries.ui.view.radius.RadiusRelativeLayout>
</RelativeLayout>